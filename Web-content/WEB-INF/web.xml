<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>MovieListServlet</servlet-name>
        <servlet-class>MovieListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SingleMovieServlet</servlet-name>
        <servlet-class>SingleMovieServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SingleStarServlet</servlet-name>
        <servlet-class>SingleStarServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginPageServlet</servlet-name>
        <servlet-class>LoginPageServlet</servlet-class>
    </servlet>


    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>MovieListServlet</servlet-name>
        <url-pattern>/api/movies</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SingleMovieServlet</servlet-name>
        <url-pattern>/api/movie</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SingleStarServlet</servlet-name>
        <url-pattern>/api/star</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginPageServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>SessionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- Welcome file list (for your static content like movieList.html) -->
    <welcome-file-list>
        <welcome-file>static/LandingPage/landingPage.html</welcome-file>
    </welcome-file-list>

    <!-- Session Timeout Configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 minutes of inactivity -->
    </session-config>

</web-app>
